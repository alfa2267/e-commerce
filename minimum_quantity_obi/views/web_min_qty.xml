<?xml version="1.0" encoding="utf-8"?>
<odoo> 
	
    <template id="" inherit_id="website_sale.product_quantity" name="Minimum Qty">
        
     <xpath expr="//input[@class='form-control quantity']" position="replace">
            
     <t t-foreach="product" t-as="doc" >
     
     <t t-if="doc.set_min_order_qty_eshop"> 
                
             

 <t t-set = "mino" t-value = "doc.minimum_order_quantity" />


   
 <input type="text" class="form-control quantity" t-att-data-min="mino" t-att-value="mino" name="add_qty"/>
                    

</t>
           
<t t-if=" not doc.set_min_order_qty_eshop">  

            <input type="text" class="form-control quantity" data-min="1" t-att-value="1" name="add_qty"/>
          
          </t>
          
          </t>   
                    
</xpath>
    
    </template>
           
     
    </odoo>